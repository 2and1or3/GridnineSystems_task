{
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true,
    "amd": true
  },
  "rules": {
    "import/no-unresolved": "off",
    "react/destructuring-assignment": "off",
    "no-bitwise": "off",
    "no-plusplus": "off",
    "react/prop-types": 0
  },
  "plugins": [
    "import",
    "jsx-a11y"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
